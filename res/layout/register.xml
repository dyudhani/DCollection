<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="#ffffff" android:orientation="vertical">
    <LinearLayout android:id="@+id/LinearLayout04" android:background="@drawable/wrapheader" android:layout_height="55dp" android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:id="@+id/LinearLayout06" android:layout_height="match_parent" android:layout_width="wrap_content" android:gravity="center">
            <TextView android:layout_height="30dp" android:background="@drawable/back" android:layout_width="30dp" android:id="@+id/rback"></TextView>
        </LinearLayout>
        <LinearLayout android:id="@+id/LinearLayout05" android:layout_height="match_parent" android:layout_width="wrap_content" android:gravity="center">
            <TextView android:textSize="25dp" android:textColor="#3498db" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextView03" android:layout_marginLeft="15dp" android:text="Kelola Barang"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:background="#f7f1e3" android:layout_width="match_parent" android:layout_height="75dp" android:gravity="center">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/textView3" android:gravity="center" android:text="Masukkan Data Diri Anda" android:textColor="#3498db" android:textSize="20dp"></TextView>
    </LinearLayout>
    <ScrollView android:layout_height="wrap_content" android:id="@+id/scrollView1" android:layout_width="match_parent">
        <LinearLayout android:id="@+id/linearLayout6" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout android:layout_marginTop="35dp" android:layout_marginLeft="10dp" android:orientation="vertical" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout8" android:layout_marginBottom="35dp">
                <LinearLayout android:layout_height="30dp" android:layout_width="match_parent" android:id="@+id/linearLayout2">
                    <TextView android:textSize="25dp" android:layout_height="wrap_content" android:text="Nama Pemilik" android:id="@+id/textView2" android:textColor="#222" android:layout_width="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3">
                    <EditText android:layout_height="wrap_content" android:textSize="25dp" android:background="#ffffff" android:hint="   Joko Anwar" android:layout_width="match_parent" android:layout_marginBottom="10dp" android:inputType="textEmailAddress|textPersonName" android:id="@+id/rnama"></EditText>
                    <TextView android:layout_height="4dp" android:text="TextView" android:id="@+id/textView3" android:layout_width="match_parent" android:background="#3498db"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_marginTop="15dp" android:layout_marginLeft="10dp" android:orientation="vertical" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout8" android:layout_marginBottom="35dp">
                <LinearLayout android:layout_height="30dp" android:layout_width="match_parent" android:id="@+id/linearLayout2">
                    <TextView android:textSize="25dp" android:layout_height="wrap_content" android:text="Email" android:id="@+id/textView2" android:textColor="#222" android:layout_width="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3">
                    <EditText android:layout_height="wrap_content" android:textSize="25dp" android:background="#ffffff" android:inputType="textEmailAddress" android:hint="   xx@gmail.com" android:layout_width="match_parent" android:layout_marginBottom="10dp" android:id="@+id/remail"></EditText>
                    <TextView android:layout_height="4dp" android:text="TextView" android:id="@+id/textView3" android:layout_width="match_parent" android:background="#3498db"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_marginTop="15dp" android:layout_marginLeft="10dp" android:orientation="vertical" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/LinearLayout01" android:layout_marginBottom="35dp">
                <LinearLayout android:layout_height="30dp" android:layout_width="match_parent" android:id="@+id/LinearLayout03">
                    <TextView android:textSize="25dp" android:layout_height="wrap_content" android:text="Password" android:id="@+id/TextView01" android:textColor="#222" android:layout_width="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/LinearLayout02" android:layout_marginTop="5dp">
                    <EditText android:textSize="25dp" android:background="#ffffff" android:hint="000000" android:layout_width="match_parent" android:gravity="center" android:inputType="number" android:maxLength="6" android:layout_height="45dp" android:id="@+id/rpassword"></EditText>
                    <TextView android:layout_height="4dp" android:text="TextView" android:id="@+id/TextView02" android:layout_width="match_parent" android:background="#3498db"></TextView>
                    <TextView android:layout_marginTop="10dp" android:textSize="17dp" android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#333" android:layout_width="wrap_content" android:text="*Harus menggunakan angka Maks 6 digit"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout4">
                <LinearLayout android:layout_marginTop="50dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout5">
                    <Button android:layout_height="50dp" android:layout_margin="5dp" android:textSize="20dp" android:layout_width="match_parent" android:background="@drawable/login" android:textColor="#ffffff" android:text="Daftar" android:id="@+id/daftar"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
