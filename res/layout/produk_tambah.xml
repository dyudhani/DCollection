<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:background="#f7f1e3">
    <LinearLayout android:layout_width="match_parent" android:background="@drawable/wrapheader" android:orientation="horizontal" android:id="@+id/linearLayout1" android:layout_height="55dp">
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout2" android:layout_height="match_parent" android:gravity="center">
            <TextView android:layout_width="30dp" android:background="@drawable/back" android:layout_height="30dp" android:id="@+id/tpback"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout3" android:layout_height="match_parent" android:gravity="center">
            <TextView android:layout_marginLeft="15dp" android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_height="wrap_content" android:textSize="25dp" android:textColor="#3498db" android:text="Tambah Produk"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_height="match_parent" android:id="@+id/linearLayout6" android:layout_width="match_parent" android:gravity="right">
            <Button android:id="@+id/sproduk" android:background="@drawable/centang" android:layout_height="50dp" android:layout_width="50dp" android:layout_marginRight="10dp"></Button>
        </LinearLayout>
    </LinearLayout>
    <ScrollView android:id="@+id/scrollView1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <LinearLayout android:id="@+id/linearLayout7" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:id="@+id/linearLayout4" android:background="@drawable/bgcontent" android:layout_margin="10dp" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="wrap_content">
                <LinearLayout android:id="@+id/linearLayout9" android:layout_width="match_parent" android:layout_height="wrap_content"></LinearLayout>
                <LinearLayout android:id="@+id/linearLayout5" android:layout_height="wrap_content" android:layout_width="match_parent">
                    <TextView android:id="@+id/textView1" android:background="@drawable/bag" android:layout_height="150dp" android:layout_width="150dp"></TextView>
                    <LinearLayout android:id="@+id/linearLayout10" android:layout_height="match_parent" android:layout_width="match_parent" android:gravity="center" android:orientation="vertical" android:layout_margin="20dp">
                        <EditText android:inputType="textEmailAddress|textPersonName" android:hint="Nama Barang" android:id="@+id/nproduk" android:background="#ffffff" android:layout_width="match_parent" android:layout_marginBottom="10dp" android:textSize="25dp" android:layout_height="wrap_content"></EditText>
                        <TextView android:layout_width="match_parent" android:text="TextView" android:id="@+id/TextView07" android:background="#3498db" android:layout_height="4dp"></TextView>
                    </LinearLayout>
                    <TextView android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:id="@+id/TextView04" android:text="TextView"></TextView>
                </LinearLayout>
                <LinearLayout android:id="@+id/LinearLayout04" android:layout_marginBottom="35dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="35dp" android:orientation="vertical" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
                    <LinearLayout android:id="@+id/LinearLayout03" android:layout_height="30dp" android:layout_width="match_parent">
                        <TextView android:textSize="25dp" android:textColor="#222" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextView02" android:text="Harga Jual"></TextView>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/LinearLayout05" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:orientation="vertical">
                        <EditText android:background="#ffffff" android:layout_marginBottom="10dp" android:layout_height="wrap_content" android:id="@+id/hjual" android:layout_width="match_parent" android:textSize="25dp" android:hint="   Joko Anwar" android:inputType="textEmailAddress|textPersonName" android:text="Rp. "></EditText>
                        <TextView android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:id="@+id/TextView03" android:text="TextView"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearLayout8" android:layout_marginBottom="35dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="35dp" android:orientation="vertical" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
                    <LinearLayout android:id="@+id/LinearLayout02" android:layout_height="30dp" android:layout_width="match_parent">
                        <TextView android:textSize="25dp" android:textColor="#222" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextView01" android:text="Harga Modal"></TextView>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:orientation="vertical">
                        <EditText android:background="#ffffff" android:layout_marginBottom="10dp" android:layout_height="wrap_content" android:id="@+id/hmodal" android:layout_width="match_parent" android:textSize="25dp" android:hint="   Joko Anwar" android:inputType="textEmailAddress|textPersonName" android:text="Rp. "></EditText>
                        <TextView android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:id="@+id/textView3" android:text="TextView"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/LinearLayout06" android:layout_marginBottom="35dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="35dp" android:orientation="vertical" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
                    <LinearLayout android:id="@+id/LinearLayout08" android:layout_height="30dp" android:layout_width="match_parent">
                        <TextView android:textSize="25dp" android:textColor="#222" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextView06" android:text="Masukkan Stock"></TextView>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/LinearLayout07" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:orientation="vertical">
                        <EditText android:background="#ffffff" android:layout_marginBottom="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:inputType="textEmailAddress|textPersonName" android:id="@+id/stock"></EditText>
                        <TextView android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:id="@+id/TextView05" android:text="TextView"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
