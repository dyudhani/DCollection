<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:background="#f7f1e3">
    <LinearLayout android:layout_width="match_parent" android:background="@drawable/wrapheader" android:orientation="horizontal" android:id="@+id/linearLayout1" android:layout_height="55dp">
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout2" android:layout_height="match_parent" android:gravity="center">
            <TextView android:layout_width="30dp" android:background="@drawable/back" android:layout_height="30dp" android:id="@+id/kback"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout3" android:layout_height="match_parent" android:gravity="center">
            <TextView android:layout_marginLeft="15dp" android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_height="wrap_content" android:textSize="25dp" android:textColor="#3498db" android:text="Edit Pegawai"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_height="match_parent" android:id="@+id/linearLayout6" android:layout_width="match_parent" android:gravity="right">
            <Button android:id="@+id/daftarp" android:background="@drawable/centang" android:layout_height="50dp" android:layout_width="50dp" android:layout_marginRight="10dp"></Button>
        </LinearLayout>
    </LinearLayout>
    <ScrollView android:id="@+id/scrollView1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <LinearLayout android:id="@+id/linearLayout7" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:id="@+id/linearLayout4" android:background="@drawable/bgcontent" android:layout_margin="10dp" android:layout_height="550dp" android:layout_width="match_parent" android:orientation="vertical">
                <LinearLayout android:id="@+id/LinearLayout04" android:layout_marginBottom="35dp" android:layout_marginLeft="10dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_width="match_parent" android:layout_marginTop="35dp" android:orientation="vertical">
                    <LinearLayout android:id="@+id/LinearLayout03" android:layout_height="30dp" android:layout_width="match_parent">
                        <TextView android:textSize="25dp" android:textColor="#222" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextView02" android:text="Nama Pegawai"></TextView>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/LinearLayout05" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:orientation="vertical">
                        <EditText android:background="#ffffff" android:layout_marginBottom="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:hint="   Joko Anwar" android:inputType="textEmailAddress|textPersonName" android:id="@+id/pnama"></EditText>
                        <TextView android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:id="@+id/TextView03" android:text="TextView"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearLayout8" android:layout_marginBottom="35dp" android:layout_marginLeft="10dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_width="match_parent" android:layout_marginTop="35dp" android:orientation="vertical">
                    <LinearLayout android:id="@+id/LinearLayout02" android:layout_height="30dp" android:layout_width="match_parent">
                        <TextView android:textSize="25dp" android:textColor="#222" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextView01" android:text="Email"></TextView>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="15dp" android:orientation="vertical">
                        <EditText android:background="#ffffff" android:layout_marginBottom="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:inputType="textEmailAddress|textPersonName" android:hint="  anwar@gmail.com" android:id="@+id/pemail"></EditText>
                        <TextView android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:id="@+id/textView3" android:text="TextView"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@+id/LinearLayout08" android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="15dp" android:layout_marginBottom="35dp">
                    <LinearLayout android:id="@+id/LinearLayout07" android:layout_width="match_parent" android:layout_height="30dp">
                        <TextView android:id="@+id/TextView05" android:textColor="#222" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25dp" android:text="Password"></TextView>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/LinearLayout06" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="5dp">
                        <EditText android:textSize="25dp" android:maxLength="6" android:background="#ffffff" android:inputType="number" android:layout_height="45dp" android:gravity="center" android:layout_width="match_parent" android:hint="000000" android:id="@+id/ppassword"></EditText>
                        <TextView android:id="@+id/TextView05" android:layout_height="4dp" android:background="#3498db" android:layout_width="match_parent" android:text="TextView"></TextView>
                        <TextView android:id="@+id/textView4" android:textColor="#333" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="17dp" android:text="*Harus menggunakan angka Maks 6 digit" android:layout_marginTop="10dp"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
