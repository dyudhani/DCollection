<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="#f7f1e3" android:orientation="vertical">
    <LinearLayout android:background="@drawable/wrapheader" android:orientation="horizontal" android:layout_height="55dp" android:layout_width="match_parent" android:id="@+id/linearLayout1">
        <LinearLayout android:layout_height="match_parent" android:gravity="center" android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:id="@+id/linearLayout6">
            <TextView android:gravity="center" android:id="@+id/menu" android:background="@drawable/menu" android:layout_height="40dp" android:layout_width="40dp"></TextView>
        </LinearLayout>
        <TextView android:gravity="center" android:id="@+id/textView2" android:layout_marginLeft="15dp" android:textSize="25dp" android:layout_height="match_parent" android:layout_width="wrap_content" android:textColor="#3498db" android:text="Transaksi"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="wrap_content">
        <ListView android:id="@+id/android:list" android:layout_width="match_parent" android:layout_height="wrap_content"></ListView>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="match_parent">
        <LinearLayout android:layout_margin="25dp" android:layout_alignParentBottom="true" android:layout_width="match_parent" android:id="@+id/linear" android:orientation="vertical" android:layout_height="wrap_content">
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="match_parent">
                <TextView android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#333" android:textSize="20dp" android:id="@+id/jumlahProduk"></TextView>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout2" android:layout_height="wrap_content">
                <Button android:layout_height="50dp" android:layout_width="match_parent" android:id="@+id/totransaksi" android:background="@drawable/login" android:layout_margin="5dp" android:textColor="#ffffff" android:textSize="30dp"></Button>
                <LinearLayout android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center" android:id="@+id/keTagih">
                    <TextView android:layout_height="wrap_content" android:id="@+id/textView3" android:gravity="center" android:layout_width="wrap_content" android:text="Tagih  =  " android:textSize="25dp" android:textColor="#ffffff"></TextView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#ffffff" android:textSize="25dp" android:id="@+id/tagih" android:text="X"></TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

